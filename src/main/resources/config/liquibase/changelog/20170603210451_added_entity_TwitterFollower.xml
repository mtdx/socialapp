<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity TwitterFollower.
    -->
    <changeSet id="20170603210451-1" author="jhipster">
        <createTable tableName="twitter_follower">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="userid" type="varchar(20)">
                <constraints nullable="false" />
            </column>

            <column name="account_age" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="likes" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="followers" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="tweets" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="username" type="varchar(15)">
                <constraints nullable="true" />
            </column>

            <column name="jhi_like" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="follow" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="updated" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="competitor_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="twitter_follower" columnName="updated" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
